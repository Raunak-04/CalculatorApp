<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F5F5F5">

<androidx.cardview.widget.CardView
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="24dp"
    app:layout_constraintTop_toTopOf="parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/displaybackgroundColor"
        android:padding="24dp">
        <TextView
            android:id="@+id/calculataiondisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="#9D9898"
            android:textSize="20sp"
            android:maxLines="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="#9D9898"
            android:textSize="50dp"
            android:maxLines="1"
            android:text="0"
            android:id="@+id/resultdisplay"
            android:layout_marginTop="8dp"
            />


    </LinearLayout>

</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintBottom_toBottomOf="parent" >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="4"
            android:rowCount="5"
            android:padding="16dp">



            <!--//Row 1-->
            <Button
                android:id="@+id/btnClear"
                style="@style/CalculatorButton"
                 android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="C"
                android:background="@drawable/btn_clear_background"/>
            <Button
                android:id="@+id/btnbackspace"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="⌫"
                android:background="@drawable/button_operatorabckground"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPercantage"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="%"
                android:background="@drawable/button_operatorabckground"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btndivision"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="÷"
                android:background="@drawable/button_operatorabckground"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnno7"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="7"
                android:background="@drawable/button_background"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnno8"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="8"
                android:background="@drawable/button_background"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnno9"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="9"
                android:background="@drawable/button_background"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnmultiply"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="×"
                android:background="@drawable/button_operatorabckground"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnno4"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="4"
                android:background="@drawable/button_background"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnno5"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="5"
                android:background="@drawable/button_background"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnno6"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="6"
                android:background="@drawable/button_background"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnminus"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="-"
                android:background="@drawable/button_operatorabckground"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnno1"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="1"
                android:background="@drawable/button_background"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnno2"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="2"
                android:background="@drawable/button_background"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnno3"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="3"
                android:background="@drawable/button_background"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnplus"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="+"
                android:background="@drawable/button_operatorabckground"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn0"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="0"
                android:background="@drawable/button_background"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btndot"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="."
                android:background="@drawable/button_background"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn00"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="00"
                android:background="@drawable/button_background"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnequal"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="="
                android:background="@drawable/btn_equal_background"/>





        </GridLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>